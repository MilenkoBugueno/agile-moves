.row
  .form-actions
    .span7
      %h3
        = @project.title
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_path(@project), :class => 'btn'
        = link_to "X", project_path(@project), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    .span4
      = link_to 'Plan', plan_projects_path(id: @project.id), :class => 'btn btn-warning'
      = link_to 'Work', work_projects_path(id: @project.id, date: @date), :class => 'btn btn-warning'
      = link_to 'Report', report_projects_path(id: @project.id), :class => 'btn btn-warning'

