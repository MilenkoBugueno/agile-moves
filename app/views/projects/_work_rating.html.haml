%table.table.table-striped
  %tr
    %th{:width => "150px;"}
    %th{:width => "300px;"} Title
    %th{:width => "100px;"} Owner
    %th{:width => "200px;"} Team
    %th{:width => "80px;"} Publish date
    %th{:width => "40px;"} Actions
    
  - @moves.each do |move|
    -if !move.reviewed_by_me(current_user)
      %tr
        %td
          -if move.move_type != nil  && move.move_type.star_rating
            =image_tag("bewerten.png", :width => 20, :height => 20) unless move.user == current_user
            = "#{move.stars}"
            = image_tag("star.png", :width => 15, :height => 15)
            ="/ #{move.ratings.count} votes"
          -else
            =image_tag("bewerten.png", :width => 20, :height => 20) unless move.user == current_user
            -if move.thumbs_down > 0
              = move.thumbs_down
              = image_tag("daumenrunter.png", :width => 15, :height => 15)
            -if move.thumbs_up > 0
              = move.thumbs_up
              = image_tag("daumenhoch.png", :width => 15, :height => 15)
            -if move.comments > 0
              = move.comments
              = image_tag("kommentar.gif", :width => 15, :height => 15)
        %td= link_to move.title, move
        %td= move.user.name
        %td
          -move.users.each do |reviewer|
            = reviewer.name
        %td= move.publish_date.to_s(:short) unless move.publish_date == nil
        %td
          -if move.user == current_user
            = simple_form_for move, :html => { :class => 'form-horizontal' } do |f|
              = f.hidden_field :state_id, :value => State.find_or_create_by_title(:title => "closed").id
              = f.button :submit, :class => 'btn btn-mini btn-danger', :value=> t("moves.links.close")
          -else
            =simple_form_for [move, Rating.new] do |f|
              = f.hidden_field :user_id, :value => current_user.id
              = f.submit t("helpers.links.skip"), :class => 'btn btn-mini btn-warning', name: "skip_star_rating"

%br