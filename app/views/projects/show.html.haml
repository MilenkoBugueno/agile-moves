.row
  .form-actions
    .span6
      %h3
        = @project.title
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_path(@project), :class => 'btn'
        = link_to "X", project_path(@project), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    
    .span5
      = link_to 'Plan', plan_projects_path(id: @project.id), :class => 'btn'
      = link_to 'Work', plan_projects_path(id: @project.id), :class => 'btn btn-info'
      = link_to 'Report', plan_projects_path(id: @project.id), :class => 'btn btn-warning'
      
      
%p
  %strong Description:
  %br
  %br
  = raw(@project.body)

%br

%p
  %strong Team:
  -@project.users.each do |user|
    = user.name

%br

%p
  %strong Move types:
  -@move_types.each do |move_type|
    = move_type.title

%br
%br

%hr

%h4 States

%table.table.table-striped
  %thead
    %tr
      %th
      %th Title
      %th Position
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @states.each do |state|
      %tr
        %td
        %td= state.title
        %td= state.position
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_state_path(state), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), state_path(state), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_state_path(project_id: @project.id), :class => 'btn btn-primary'

  
