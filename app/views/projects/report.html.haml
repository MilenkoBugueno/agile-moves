=render :partial => "header", :locals => {:page => "report"}

.row
  .span2
    .list-group
      -@project.move_types.each do |move_type|
        -if @move_type == move_type
          = link_to move_type.title, work_projects_path(id: @project.id, date: @date, move_type: move_type.id), :class => "list-group-item list-group-item-info active"
        -else
          = link_to move_type.title, work_projects_path(id: @project.id, date: @date, move_type: move_type.id), :class => "list-group-item list-group-item-info"

  .span10
    -if @move_type
      -if @move_type.thumb_rating
        =render :partial => "report_rating"
      -elsif @move_type.star_rating
        =render :partial => "report_rating"
      -elsif @move_type.has_tomatoes
        =render :partial => "report_tomatoes"
