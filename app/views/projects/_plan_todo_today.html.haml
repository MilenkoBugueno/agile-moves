%h5= t("moves.links.todotoday").upcase
=form_tag sendto_moves_path, method: :put do
  =t("helpers.links.send")+":"
  =hidden_field_tag :move_type_id, @move_type.id
  =hidden_field_tag :project_id, @project.id
  =hidden_field_tag :publish_date, nil
  =submit_tag t("moves.links.activityinventory"), :class => 'btn btn-mini'

  %br
  %br
  %table.table.table-striped
    %tr
      %th{:width => "30px;"}
      %th{:width => "100px;"}
      %th{:width => "250px;"} Title
      %th{:width => "100px;"} Owner
      %th{:width => "200px;"} Team
      %th{:width => "80px;"} Publish date
      %th{:width => "40px;"} Actions

    - @moves.each do |move|
      -if move.tomatoes.present? && move.publish_date.present? && move.publish_date.today?
        -tomato = move.tomatoes.first
        %tr
          %td= check_box_tag "move_ids[]", move.id
          %td
            - if tomato.state == 1 #planed
              = image_tag("tomategruen.png", :width => 20, :height => 20)
            - elsif tomato.state == 2 #done
              = image_tag("tomaterot.png", :width => 20, :height => 20)
            - else # not planed
              = image_tag("tomategrau.png", :width => 20, :height => 20)


            - if tomato.rating != nil
              -if tomato.rating.thumb_rating > 0
                = image_tag("daumenhoch.png", :width => 20, :height => 20)
              -else
                = image_tag("daumenrunter.png", :width => 20, :height => 20)
            - else
              = image_tag("bewerten.png", :width => 20, :height => 20)
          %td= link_to move.title, move
          %td= move.user.name
          %td
            -move.users.each do |user|
              = user.name
          %td= move.publish_date.to_s(:short) unless move.publish_date == nil
          %td
            -if move.user == current_user
              = simple_form_for move, :html => { :class => 'form-horizontal' } do |f|
                = f.hidden_field :state_id, :value => State.find_or_create_by_title(:title => "closed").id
                = f.button :submit, :class => 'btn btn-mini btn-danger', :value=> t("moves.links.close")
            -else
              =simple_form_for [move, Rating.new] do |f|
                = f.hidden_field :user_id, :value => current_user.id
                = f.submit t("helpers.links.skip"), :class => 'btn btn-mini btn-warning', name: "skip_star_rating"


  %hr

