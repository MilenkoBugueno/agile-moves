%table.table.table-striped
  %tr
    %th{:width => "100px;"} Rating
    %th{:width => "150px;"} Title
    %th{:width => "80px;"} Owner
    %th{:width => "100px;"} Team
    %th{:width => "80px;"} Publish date

  -@moves.each do |move|
    -if move.tomatoes.present?
      %tr
        %td
          /thumbs
          - if move.ratings.present?
            -if move.thumbs_down > 0
              = image_tag("daumenrunter.png", :width => 20, :height => 20)
            -elsif move.thumbs_up > 0
              = image_tag("daumenrunter.png", :width => 20, :height => 20)
          - else
            = image_tag("bewerten.png", :width => 20, :height => 20)
          /stars
          - if move.ratings.present?
            -if move.stars > 0
              = "#{move.stars}"
              = image_tag("star.png", :width => 15, :height => 15)
              ="/ #{move.ratings.count} votes"
        %td= link_to move.title, move
        %td= move.user.name if move.user.present?
        %td
          -move.users.each do |user|
            =user.name+ " "
        %td= move.publish_date.to_s(:short) unless move.publish_date == nil
