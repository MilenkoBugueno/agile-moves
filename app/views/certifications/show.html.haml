- model_class = Certification
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @certification.title
%p
  %strong= model_class.human_attribute_name(:label) + ':'
  %br
  = @certification.label
%p
  %strong= model_class.human_attribute_name(:level_id) + ':'
  %br
  = @certification.level_id
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @certification.description
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @certification.user_id
%p
  %strong= model_class.human_attribute_name(:move_type_id) + ':'
  %br
  = @certification.move_type_id
%p
  %strong= model_class.human_attribute_name(:approvements) + ':'
  %br
  = @certification.approvements
%p
  %strong= model_class.human_attribute_name(:moves_number) + ':'
  %br
  = @certification.moves_number


= link_to t('.back', :default => t("helpers.links.back")), certifications_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_certification_path(@certification), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), certification_path(@certification), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
