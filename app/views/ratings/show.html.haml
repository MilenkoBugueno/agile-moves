- model_class = Rating
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @rating.body
%p
  %strong= model_class.human_attribute_name(:star_rating) + ':'
  %br
  = @rating.star_rating
%p
  %strong= model_class.human_attribute_name(:thumb_rating) + ':'
  %br
  = @rating.thumb_rating
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @rating.user_id
%p
  %strong= model_class.human_attribute_name(:move_id) + ':'
  %br
  = @rating.move_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), ratings_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_rating_path(@rating), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), rating_path(@rating), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
