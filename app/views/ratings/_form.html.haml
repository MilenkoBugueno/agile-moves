= simple_form_for @rating, :html => { :class => 'form-horizontal' } do |f|
  = f.input :star_rating, input_html: {style: 'height:30px;'}
  = f.input :thumb_rating, input_html: {style: 'height:30px;'}
  = f.input :body
  = f.association :user
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), ratings_path, :class => 'btn'
