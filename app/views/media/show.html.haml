- model_class = Medium
.page-header
  %h1=@medium.title

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @medium.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @medium.description
%p
  %strong= model_class.human_attribute_name(:artist) + ':'
  %br
  = @medium.artist
%p
  %strong= model_class.human_attribute_name(:composer) + ':'
  %br
  = @medium.composer
%p
  %strong= model_class.human_attribute_name(:arranger) + ':'
  %br
  = @medium.arranger
%p
  %strong= model_class.human_attribute_name(:writer) + ':'
  %br
  = @medium.writer
%p
  %strong= model_class.human_attribute_name(:catalog) + ':'
  %br
  = @medium.catalog
%p
  %strong= model_class.human_attribute_name(:publisher) + ':'
  %br
  = @medium.publisher
%p
  %strong= model_class.human_attribute_name(:state_id) + ':'
  %br
  = @medium.state_id


= link_to t('.back', :default => t("helpers.links.back")), media_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_medium_path(@medium), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), medium_path(@medium), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
