%tr
  %td= check_box_tag "medium_ids[]", medium.id
  %td= link_to medium.title, medium_path(medium)
  %td= medium.artist
  %td= medium.composer
  %td= medium.arranger
  %td= medium.writer
  %td= medium.catalog
  %td= medium.publisher
  %td= signature(medium)
  %td
    -if default_edit_permissions(current_user, @move)
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_medium_path(medium), :class => 'btn btn-default btn-mini'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), medium_path(medium), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'