= simple_form_for @medium, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :description
  = f.input :artist
  = f.input :composer
  = f.input :arranger
  = f.input :writer
  = f.input :catalog
  = f.input :publisher
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), media_path, :class => 'btn btn-default'
