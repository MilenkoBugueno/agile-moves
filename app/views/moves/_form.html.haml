= simple_form_for @move, :html => { :class => 'form-horizontal' } do |f|
  = f.association :move_type, include_blank: false
  = f.input :title, input_html: {style: 'width:500px;'}
  = f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => "mini"}}
  = f.text_field :publish_date
  = f.association :user
  = f.association :users, :as => :check_boxes, :label => "Team"
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), moves_path, :class => 'btn'
