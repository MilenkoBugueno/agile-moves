= simple_form_for @move, :html => { :class => 'form-horizontal' } do |f|
  = f.input :body
  = f.input :move_type_id
  = f.input :user_id
  = f.input :title
  = f.input :state_id
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), moves_path, :class => 'btn'
