- model_class = Move
.page-header
  %h1=t 'helpers.titles.new', :model => model_class.model_name.human.titleize

= simple_form_for @move, :html => { :class => 'form-horizontal' } do |f|
  -if @project.present?
    - if  @move_type.present?
      = f.association :move_type, include_blank: false, :collection => @project.move_types, :selected => @move_type.id
    -else
      = f.association :move_type, include_blank: false, :collection => @project.move_types
    = f.association :project, include_blank: false,  :selected => @project.id
  -else
    = f.association :move_type, include_blank: false
    = f.association :project, include_blank: false
  = f.input :title, input_html: {style: 'height:30px;width: 500px;'}
  = f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => "mini"}}
  - if @move_type.present? && @move_type.make_my_sprint
    = f.input :start_date, :as => :string, input_html: {style: 'height:30px;', value: Date.today()}
  = f.input :publish_date, :as => :string, input_html: {style: 'height:30px;', value: Date.today() }
  = f.association :category, :collection => Category.order("title ASC")
  -if @project.present?
    = f.association :user, :label => t("moves.links.owner"),  :selected =>  current_user.id, :collection => @project.users
    = f.association :users, :as => :check_boxes, :label => t("projects.team"), :checked => [current_user.id], :collection => @project.users
    = f.hidden_field :project_id, :value => @project.id
  -else
    = f.association :user, :label => t("moves.links.owner"),  :selected =>  current_user.id
    = f.association :users, :as => :check_boxes, :label => t("projects.team"), :checked => [current_user.id]
  %p{:align => "center"}
    = link_to t("moves.team.select_all"), "javascript:select_all_team('move[user_ids][]', '#{t('moves.team.select_all')}', '#{t('moves.team.select_none')}');", :id => 'link_all_team', :class => 'btn'
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    -if @project.present?
      = link_to "Cancel", work_projects_path(:id => @project.id), :class => 'btn'
    -else
      = link_to "Cancel", root_path, :class => 'btn'


    
