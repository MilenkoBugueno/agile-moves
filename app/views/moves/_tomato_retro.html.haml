.panel.panel-default
  .panel-heading
    %h4= t("helpers.retro")
  .panel-body
    .row
      .span10
        -if @move.users.include? current_user || @move.user == current_user
          = simple_form_for @move, :html => { :class => 'form-horizontal' } do |f|
            = f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => "mini"}}, :label => false
            = f.button :submit, :class => 'btn btn-primary'
        -else
          =raw(@move.body)
