= link_to "Back to Projects", projects_path, :class => 'btn btn-warning'



%hr

%h3= t("moves.index")
%br

%table.table.table-striped
  %tr
    %th{:width => "300px;"} Title
    %th{:width => "100px;"} Project
    %th{:width => "100px;"} Owner
    %th{:width => "200px;"} Team
    %th{:width => "150px;"} Move type
    %th{:width => "80px;"} Created at


  - @moves.each do |move|
    %tr
      %td= link_to move.title, move
      %td= move.project.title
      %td= move.user.name if move.user.present?
      %td
        -move.users.each do |reviewer|
          = reviewer.name
      %td= move.move_type.title if move.move_type.present?
      %td= move.created_at.to_s(:short) if move.created_at.present?

    