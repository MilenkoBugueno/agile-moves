- model_class = MoveType
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:thumb_rating)
      %th= model_class.human_attribute_name(:star_rating)
      %th= model_class.human_attribute_name(:has_tomatoes)
      %th= model_class.human_attribute_name(:has_twitter_idea)
      %th= model_class.human_attribute_name(:make_my_day)
      %th= model_class.human_attribute_name(:make_my_sprint)
      %th= model_class.human_attribute_name(:is_user_story)
      %th=t("helpers.actions")
  %tbody
    - @move_types.each do |move_type|
      %tr
        %td= link_to move_type.title, move_type_path(move_type)
        %td= move_type.body
        %td= move_type.thumb_rating
        %td= move_type.star_rating
        %td= move_type.has_tomatoes
        %td= move_type.has_twitter_idea
        %td= move_type.make_my_day
        %td= move_type.make_my_sprint
        %td= move_type.is_user_story
        %td
          = link_to t("helpers.links.edit"), edit_move_type_path(move_type), :class => 'btn btn-mini'
          = link_to t("helpers.links.destroy"), move_type_path(move_type), :method => :delete, :data => { :confirm => t("helpers.links.confirm") }, :class => 'btn btn-mini btn-danger'

= link_to t("helpers.links.new"), new_move_type_path, :class => 'btn btn-primary'
