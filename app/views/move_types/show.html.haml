- model_class = MoveType
.page-header
  %h1= @move_type.title

%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @move_type.body
%p
  %strong= "Features:"
  %ul
    -if @move_type.thumb_rating
      %li="Thumb rating"
    -if @move_type.star_rating
      %li="Star rating"
    -if @move_type.has_tomatoes && @move_type.tomatoes_number != nil
      %li="#{@move_type.tomatoes_number} generated tomatoes"

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), move_types_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_move_type_path(@move_type), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), move_type_path(@move_type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
