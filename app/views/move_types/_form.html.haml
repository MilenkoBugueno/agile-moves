= simple_form_for @move_type, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :body
  = f.input :thumb_rating
  = f.input :star_rating
  .row
    .span4
      = f.input :has_tomatoes
    .span8
      = f.input :tomatoes_number, :label => "Number of automatically generated tomatoes"
  = f.input :has_twitter_idea
  
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), move_types_path, :class => 'btn'
