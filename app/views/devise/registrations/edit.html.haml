%h2
  Edit #{resource_name.to_s.humanize}
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f|
  = f.error_notification
  = display_base_errors resource
  = f.input :name, :autofocus => true
  = f.input :email, :required => true
  = f.input :password, :autocomplete => "off", :hint => t("editaccount.leaveblank"), :required => false
  = f.input :password_confirmation, :required => false
  = f.input :current_password, :hint => t("editaccount.currentpassword"), :required => true
  = f.button :submit, t("helpers.links.update"), :class => 'btn-primary'
%h3= t("editaccount.cancelaccount")
%p
  #{link_to t("editaccount.cancelaccount"), registration_path(resource_name), :data => { :confirm => t("helpers.links.confirm") }, :method => :delete}.
= link_to t("helpers.links.back"), :back
