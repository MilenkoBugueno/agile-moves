- model_class = State
.page-header
  %h1=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize
= simple_form_for @state, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :body
  = f.input :position
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), states_path, :class => 'btn'
