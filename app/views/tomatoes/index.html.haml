- model_class = Tomato
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:end_time)
      %th= model_class.human_attribute_name(:start_time)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:move_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tomatoes.each do |tomato|
      %tr
        %td= link_to tomato.id, tomato_path(tomato)
        %td= tomato.body
        %td= tomato.end_time
        %td= tomato.start_time
        %td= tomato.state
        %td= tomato.title
        %td= tomato.user_id
        %td= tomato.move_id
        %td=l tomato.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_tomato_path(tomato), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), tomato_path(tomato), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_tomato_path, :class => 'btn btn-primary'
