- model_class = Tomato
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @tomato.body
%p
  %strong= model_class.human_attribute_name(:end_time) + ':'
  %br
  = @tomato.end_time
%p
  %strong= model_class.human_attribute_name(:start_time) + ':'
  %br
  = @tomato.start_time
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @tomato.state
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @tomato.title
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @tomato.user_id
%p
  %strong= model_class.human_attribute_name(:move_id) + ':'
  %br
  = @tomato.move_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tomatoes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_tomato_path(@tomato), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), tomato_path(@tomato), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
