- model_class = Tomato
.row
  .span8
    %h2= @tomato.title
    = link_to "Back to my work", work_projects_path(:id => @project.id, :move_type => @move_type.id), :class => 'btn'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_tomato_path(@tomato), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), tomato_path(@tomato), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    %br
    %br
    =raw(@tomato.body)
  .span4
    %h5="Start time: #{@tomato.start_time}" unless @tomato.start_time == nil
    %h5="End time: #{@tomato.end_time}" unless @tomato.end_time == nil
    %h5="Owner: #{@tomato.user.name}" unless @tomato.user == nil
    
%hr


%h3 Timer
#counter_2
  .desc
%div#countdown
= button_tag "Start Timer", :id => "btoStart", :name => "los", :onClick => "start_me()"
= text_field_tag "txtTimer", nil, "value" => 25, "size" => 6
%br
%br
%table
  %tr
    %td Started
    %td= text_field_tag "hidStartTime", nil, "size" => 6
  %tr
    %td Ended
    %td= text_field_tag "hidEndTime", nil, "size" => 100
%hr

/= render :partial => 'interruptions' # in the first implementation we don't support interruptions