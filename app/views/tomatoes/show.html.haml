- model_class = Tomato
.row
  .span8
    %h2= @tomato.title
    = link_to "Back to move", move_path(@tomato.move_id), :class => 'btn'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_tomato_path(@tomato), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), tomato_path(@tomato), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    %br
    %br
    =raw(@tomato.body)
  .span4
    %h5="Start time: #{@tomato.start_time}" unless @tomato.start_time == nil
    %h5="End time: #{@tomato.end_time}" unless @tomato.end_time == nil
    %h5="Owner: #{@tomato.user.name}"
    
%hr


%h3 Timer
%div#counter 
.desc
  %dev Minutes
  %dev Seconds


%h5= "Create New Interruption"  
%br
  
=simple_form_for [@tomato, Interruption.new] do |f| 
  = f.input :body, input_html: {style: 'height:100px; width:300px'}
  = f.hidden_field :user_id, :value => current_user.id
  .form-actions
    = f.submit "Internal Interruption", :class => 'btn btn-primary', name: "interruption_type", value: "internal"
    = f.submit "External Interruption", :class => 'btn-danger', name: "interruption_type", value: "external"
    = f.submit "Comment", :class => 'btn', name: "interruption_type", value: "comment"

%br
%br
%hr
