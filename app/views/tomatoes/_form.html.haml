= simple_form_for @tomato, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :body
  = f.input :publish_date, :as => :string
  = f.input :end_time
  = f.input :start_time
  = f.association :user
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tomatoes_path, :class => 'btn'
