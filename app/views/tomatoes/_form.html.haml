= simple_form_for @tomato, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :body
  = f.input :publish_date, :as => :string
  = f.input :start_time
  = f.input :end_time
  = f.input :state, :collection =>  [["Undone", 0], ["Done", 2]], :as => :radio_buttons, item_wrapper_class: 'inline'
  = f.association :user
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t("moves.links.backtowork"), work_projects_path(:id => @project.id, :move_type => @move_type.id), :class => 'btn'
