.panel.panel-default
  .panel-heading
    %h3.panel-title= t("helpers.wordpress.publish")
  .panel-body
    %form{:action => tomato_path(:wppublish => "true"), :method => "get"}
      %select{:class => "multiselect", :multiple => "multiple", :name => "publish_to[]"}
        - @wp_blogs.each do |blog|
          %optgroup{:label => "#{blog}"}
            - @wp_categories[blog].each do |cat|
              %option{:value => "#{blog}!#{cat}"}
                = cat
      %input{:type => "hidden", :value => "true", :name => "wppublish"}
      %input{:type => "submit", :value => t("helpers.wordpress.publish"), :class => "btn btn-mini"}
