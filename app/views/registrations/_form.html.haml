= simple_form_for @registration, :html => { :class => 'form-horizontal' } do |f|
  -if @certification.present?
    = f.association :certification, input_html: {style: 'height:30px;'}, :selected => @certification.id
  -else
    = f.association :certification, input_html: {style: 'height:30px;'}
  -if @registration.new_record? && current_user.present?
    = f.association :user, input_html: {style: 'height:30px;'}, :selected => current_user.id
  -else
    = f.association :user, input_html: {style: 'height:30px;'}

  = f.input :start_date, :as => :string, input_html: {style: 'height:30px;'}
  = f.input :end_date, :as => :string, input_html: {style: 'height:30px;'}

  = f.association :users, :as => :check_boxes, :label => t("simple_form.labels.registration.user_ids")

  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), registrations_path, :class => 'btn btn-default'
