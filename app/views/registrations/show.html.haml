.panel.panel-info
  .panel-heading
    %h3= "Registration for " + @registration.certification.label + " (" + get_level_title(@registration.certification.level_id)+ ")"
  .panel-body
    .row
      .span7
        %p
          = link_to t('.back', :default => t("helpers.links.back")), registrations_path, :class => 'btn btn-default'
          - if (current_user.has_role? :admin) || (current_user.id == @registration.user_id)
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_registration_path(@registration), :class => 'btn btn-default'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), registration_path(@registration), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
        %br
      .span4
        %p
          %strong=t("simple_form.labels.registration.user_id") + ": "
          ="#{@registration.user.name}" if @registration.user.present?
        %p
          %strong=t("simple_form.labels.certification.move_type") + ": "
          ="#{@registration.certification.move_type.title}" if @registration.certification.move_type.present?
        %p
          %strong=t("simple_form.labels.registration.progress") + ": "
          .progress
            .progress-bar{:role=>"progressbar", "aria-valuenow"=>"#{@registration.moves.count}", "aria-valuemin"=>"0", "aria-valuemax"=>"#{@registration.certification.moves_number}", "style"=>"width: #{get_progressbar_width(@registration)}%;"}
              =@registration.moves.count
            %p{:style => 'float: right;'}
              =@registration.certification.moves_number if @registration.certification.moves_number.present?

.panel.panel-default
  .panel-heading
    %h4= t("moves.index")
  .panel-body
    %table.table.table-striped
      %thead
        %tr
          %th
          %th= t("simple_form.labels.move.title")
          %th= t("simple_form.labels.move.user_id")
          %th= t("simple_form.labels.move.publish_date")
          %th= t("simple_form.labels.move.approvements")
          %th=t '.actions', :default => t("helpers.actions")
      %tbody
        - @registration.moves.each do |move|
          %tr
            %td
            %td= link_to move.user.name, move
            %td= move.user.name
            %td= move.publish_date.to_s(:short) if move.publish_date.present?
            %td
              .progress
                .progress-bar{:role=>"progressbar", "aria-valuenow"=>"#{move.ratings.count}", "aria-valuemin"=>"0", "aria-valuemax"=>"#{@registration.certification.approvements}", "style"=>"width: 50%;"}
                  =move.ratings.count
                %p{:style => 'float: right;'}
                  =@registration.certification.approvements if @registration.certification.approvements.present?
            %td
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_move_path(move), :class => 'btn btn-default btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), move_path(move), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

    = link_to t('.new', :default => t("helpers.links.new")), new_move_path(project_id: @project.id, registration_id: @registration.id, move_type: @registration.certification.move_type_id), :class => 'btn btn-primary'



