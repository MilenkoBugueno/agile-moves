.panel.panel-info
  .panel-heading
    %h3= "Registration for" + @registration.certification.label + ": " + get_level_title(@registration.certification.level_id)
  .panel-body
    .row
      .span7
        %p
          = link_to t('.back', :default => t("helpers.links.back")), registrations_path, :class => 'btn btn-default'
          - if (current_user.has_role? :admin) || (current_user.id == @registration.user_id)
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_registration_path(@registration), :class => 'btn btn-default'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), registration_path(@registration), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
        %br
      .span4
        %p
          %strong=t("simple_form.labels.certification.user") + ": "
          ="#{@registration.user.name}" if @registration.user.present?
        %p
          %strong=t("simple_form.labels.registration.progress") + ": "
          .progress
            .progress-bar{:role=>"progressbar", "aria-valuenow"=>"#{@registration.moves.count}", "aria-valuemin"=>"0", "aria-valuemax"=>"#{@registration.certification.moves_number}", "style"=>"width: #{get_progressbar_width(@registration)}%;"}
              =@registration.moves.count
            %p{:style => 'float: right;'}
              =@registration.certification.moves_number if @registration.certification.moves_number.present?



