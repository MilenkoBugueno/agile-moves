= simple_form_for @widget, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title, input_html: {style: 'height:30px;'}
  = f.input :path, input_html: {style: 'height:30px;'}
  = f.input :widget_type
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), widgets_path, :class => 'btn btn-default'
