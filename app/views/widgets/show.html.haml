- model_class = Widget
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @widget.title
%p
  %strong= model_class.human_attribute_name(:path) + ':'
  %br
  = @widget.path
%p
  %strong= model_class.human_attribute_name(:widget_type) + ':'
  %br
  = @widget.widget_type


= link_to t('.back', :default => t("helpers.links.back")), widgets_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_widget_path(@widget), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), widget_path(@widget), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
