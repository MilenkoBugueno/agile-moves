- model_class = Capacity
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:tomatoes_capacity) + ':'
  %br
  = @capacity.tomatoes_capacity
%p
  %strong= model_class.human_attribute_name(:publish_date) + ':'
  %br
  = @capacity.publish_date
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @capacity.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), capacities_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_capacity_path(@capacity), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), capacity_path(@capacity), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
